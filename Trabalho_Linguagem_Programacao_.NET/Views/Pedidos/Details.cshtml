        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.produto.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.valor)
        </dd>
        <dt class="col-sm-2">
